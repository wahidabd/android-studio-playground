<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
    </style>
    <style name="TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="ButtonPrimary" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/design_default_color_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonSecondary" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
    </style>
    <style name="MaterialButton" parent="ThemeOverlay.Material3.Button">
        <item name="cornerRadius">6dp</item>
        <item name="backgroundTint">@color/design_default_color_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="MaterialButtonOutline" parent="MaterialButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="strokeColor">@color/design_default_color_primary</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>